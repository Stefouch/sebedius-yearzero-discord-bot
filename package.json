  "license": "GPL-3.0-or-later",
  "homepage": "https://stefouch.be/",
  "keywords": [
    "year zero",
    "year zero engine",
    "yze",
    "mutant",
    "mutant year zero",
    "myz",
    "forbidden lands",
    "fbl",
    "alien",
    "coriolis",
    "tales from the loop",
    "things from the flood",
    "vaesen",
    "twilight 2000",
    "twilight 2000 4e",
    "t2k",
    "t2k4e",
    "tw2k",
